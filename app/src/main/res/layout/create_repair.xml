<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#2F2F2F">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#0F0F0F"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="СОЗДАНИЕ ЗАЯВКИ"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ВЫБЕРИТЕ УСТРОЙСТВО"
                android:textColor="#ECECEC"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/etOwner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#3A3A3A"
                android:hint="Например... Иван Иванов"
                android:inputType="textCapWords|textPersonName"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#8E8E8E" />

            <TextView
                android:id="@+id/tvOwnerError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="УКАЖИТЕ_ИМЯ_ВЛАДЕЛЬЦА"
                android:textColor="#FF5550"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginTop="4dp"/>

            <!-- Телефон -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Телефон"
                android:textColor="#ECECEC"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#3A3A3A"
                android:hint="+7...(...)..."
                android:textColor="#FFFFFF"
                android:textColorHint="#8E8E8E"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:inputType="phone"/>

            <TextView
                android:id="@+id/tvPhoneError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="УКАЖИТЕ_КОРРЕКТНЫЙ_ТЕЛЕФОН"
                android:textColor="#FF5550"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginTop="4dp"/>
            <!-- МОДЕЛЬ УСТРОЙСТВА -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="МОДЕЛЬ УСТРОЙСТВА"
                android:textColor="#ECECEC"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/etModel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#3A3A3A"
                android:hint="Например...Samsung_A51"
                android:textColor="#FFFFFF"
                android:textColorHint="#8E8E8E"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:inputType="textCapWords"/>

            <TextView
                android:id="@+id/tvModelError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="УКАЖИТЕ МОДЕЛЬ УСТРОЙСТВА"
                android:textColor="#EF5350"
                android:textSize="12sp"
                android:visibility="gone"
                android:layout_marginTop="4dp"/>

            <!-- ОПИСАНИЕ НЕИСПРАВНОСТИ -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ОПИСАНИЕ НЕИСПРАВНОСТИ"
                android:textColor="#ECECEC"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp"/>

            <EditText
                android:id="@+id/etDesc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#3A3A3A"
                android:gravity="top|start"
                android:hint="Кратко опишите проблему"
                android:textColor="#FFFFFF"
                android:textColorHint="#8E8E8E"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:inputType="textMultiLine"
                android:maxLines="5"/>
            <!-- Дата / Время -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnPickDate"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:backgroundTint="@null"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="ВЫБРАТЬ_ДАТУ"
                    android:contentDescription="Выбрать_дату"
                    android:tooltipText="Выбрать_дату"/>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp"/>

                <Button
                    android:id="@+id/btnPickTime"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:backgroundTint="@null"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="ВЫБРАТЬ ВРЕМЯ"
                    android:contentDescription="Выбрать время"
                    android:tooltipText="Выбрать время"/>

            </LinearLayout>

            <!-- INFO: выбранные дата/время -->
            <TextView
                android:id="@+id/tvPicked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата:__.__.___Время:__:__"
                android:textColor="#EEEEEE"
                android:textSize="13sp"
                android:layout_marginTop="8dp"/>
            <!-- ОТПРАВИТЬ -->
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="#241919"
                android:contentDescription="ОТПРАВИТЬ ЗАЯВКУ НА РЕМОНТ"
                android:text="ОТПРАВИТЬ ЗАЯВКУ"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:tooltipText="ОТПРАВИТЬ ЗАЯВКУ" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>