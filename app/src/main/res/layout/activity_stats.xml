<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2F2F2F"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ЗАГОЛОВОК СТРАНИЦЫ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#0F0F0F"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="СТАТИСТИКА"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

        </LinearLayout>

        <!-- КОНТЕНТ -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ЗАЯВКИ НА РЕМОНТ -->
            <TextView
                android:text="ЗАЯВКИ НА РЕМОНТ"
                android:textColor="#ECECEC"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:background="#101010"
                    android:layout_margin="8dp">
                    <TextView android:text="ВСЕГО" android:textColor="#8E8E8E" android:textSize="12sp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvRepairTotal"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:background="#101010"
                    android:layout_margin="8dp">
                    <TextView android:text="В РАБОТЕ" android:textColor="#8E8E8E" android:textSize="12sp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvRepairWork"
                        android:text="0"
                        android:textColor="#FFA000"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:background="#101010"
                    android:layout_margin="8dp">
                    <TextView android:text="ВЫПОЛНЕНО" android:textColor="#8E8E8E" android:textSize="12sp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvRepairDone"
                        android:text="0"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Таблицы списков - последние выполненные / в работе -->
            <TextView
                android:text="Последние выполненные"
                android:textColor="#ECECEC"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TableLayout
                android:id="@+id/tableDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="8dp"
                android:background="#101010"/>
            <TextView
                android:text="Сейчас в работе"
                android:textColor="#ECECEC"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TableLayout
                android:id="@+id/tableInWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:padding="8dp"
                android:background="#101010"
                android:layout_marginBottom="24dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>